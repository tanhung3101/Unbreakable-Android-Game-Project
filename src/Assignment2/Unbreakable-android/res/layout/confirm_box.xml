<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pause_menu" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" >

        <LinearLayout
            android:id="@+id/confirmTopBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/confirmText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="text"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/confirmText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="text"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnYes"
            android:layout_width="45sp"
            android:layout_height="47sp"
            android:layout_below="@+id/confirmTopBox"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/yes" />

        <Button
            android:id="@+id/btnNo"
            android:layout_width="45sp"
            android:layout_height="46sp"
            android:layout_alignBottom="@+id/btnYes"
            android:layout_marginLeft="30sp"
            android:layout_toRightOf="@+id/btnYes"
            android:background="@drawable/no" />
    </RelativeLayout>

</RelativeLayout>